{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
        {% for article in articles %}
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ article.Contenu }}</td>
            </tr>
            <tr>
                <th>Date_de_creation</th>
                <td>{{ article.dateDeCreation ? article.dateDeCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ article.etat}}</td>
            </tr>
            <tr>
<tr>
    <th>Auteur</th>
    <td>{{ article.auteur.nom|default('Unknown Author') }}</td>
</tr>



            {% if is_granted('ROLE_EDITOR') %}
                <tr>
                    <td colspan="2">
                        <a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>
                        {# {{ include('article/_delete_form.html.twig') }} #}
                    </td>
                </tr>
            {% endif %}

        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_article_index') }}">back to list</a>
{% endblock %}
